{
    "plugins": ["prettier-plugin-solidity"],
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "printWidth": 99,
                "tabWidth": 4,
                "useTabs": false
            }
        },
        {
            "files": ["*.ts", "*.js", ".prettierrc"],
            "options": {
                "printWidth": 99,
                "tabWidth": 4,
                "useTabs": false,
                "semi": true,
                "trailingComma": "all"
            }
        },
        {
            "files": "*.json",
            "options": {
                "printWidth": 80
            }
        }
    ]
}
