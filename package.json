{
  "name": "huma-contracts-v2",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "license": "LGPL-3.0-or-later",
  "author": "",
  "main": "index.js",
  "scripts": {
    "build": "hardhat compile",
    "chain": "hardhat node",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "coverage": "hardhat coverage --network hardhat",
    "format": "prettier 'test/**/*.ts' --write",
    "gitleaks": "bash scripts/gitleaks.sh",
    "lint": "eslint 'test/**/*.ts'",
    "lint-solidity": "yarn solhint -f table 'contracts/**/*.sol'",
    "lint:fix": "eslint 'test/**/*.ts' --fix",
    "prepare": "husky install",
    "test": "hardhat test --network hardhat --typecheck",
    "verify": "hardhat verify",
    "gen-error-ids": "hardhat run scripts/gen-error-function-ids.ts --network hardhat && prettier --write scripts/error-functions.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.7",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@openzeppelin/contracts": "^4.8.3",
    "@openzeppelin/contracts-upgradeable": "^4.8.3",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.6",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "chai": "^4.3.8",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "hardhat": "^2.17.2",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "moment": "2.29.4",
    "prettier": "^3.0.3",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solhint": "^3.6.2",
    "solidity-coverage": "^0.8.1",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.0",
    "typescript": "^5.2.2"
  }
}
